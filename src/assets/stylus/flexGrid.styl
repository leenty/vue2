/*** grid ***/
  
fg-row(v)
  display flex
  if v == 'r'
    flex-flow row-reverse wrap
  else
    flex-flow row wrap
fg-col(v)
  display flex
  if v == 'r'
    flex-flow column-reverse wrap
  else
    flex-flow column wrap

fg-wrap(v)
  if v == 'no'
    flex-wrap nowrap
  else if v == 'r'
    flex-wrap wrap-reverse
  else
    flex-wrap wrap

fg-auto()
  flex 0 0 auto
fg-full()
  flex 1 1 auto
fg-grid(items)
  flex 0 1 (items/24*100) %
  
fg-jc(v)
  if v == 'sb'
    justify-content space-between
  if v == 'sa'
    justify-content space-around
  if v == 'c'
    justify-content center
  if v == 'fe'
    justify-content flex-end
  if v == 'fs'
    justify-content flex-start
  
fg-ai(v)
  if v == 'st'
    align-items stretch
  if v == 'bl'
    align-items baseline
  if v == 'c'
    align-items center
  if v == 'fe'
    align-items flex-end
  if v == 'fs'
    align-items flex-start

fg-order(o)
  order o

fg-offset(items)
  margin-left (items/24*100) %

